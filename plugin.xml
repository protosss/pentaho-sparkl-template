<?xml version="1.0" encoding="UTF-8"?>
<plugin title="globosat" loader="DEFAULT">
<overlays>
		<overlay id="startup.globosat" resourcebundle="content/globosat/resources/lang/messages">
			<menubar id="toolsmenu">
	        	<menuitem id="globosat" label="${Launcher.globosat}" command="mantleXulHandler.openUrl('${Launcher.globosat}','${Launcher.globosat_TOOLTIP}','plugin/globosat/api/default')"/>
	      	</menubar>
	    </overlay>
	</overlays>
	<lifecycle-listener class="pt.webdetails.cpk.CpkLifecycleListener"/>
	<static-paths>
		<static-path url="/globosat/static" localFolder="static"/>
		<static-path url="/globosat/resources" localFolder="resources"/>
	</static-paths>
	<content-types>
		<content-type>
			<title>Globosat</title>
			<description></description>
			<company name="" url="" logo="@PLUGIN_COMPANY_LOGO@"></company>
		</content-type>
	</content-types>
	<content-generator
		id="globosat"
		title="Globosat"
		type="globosat"
		class="pt.webdetails.cpk.CpkContentGenerator"/>
	<!-- Menu entry -->
	<menu-items>
		<!--<menu-item id="globosat_main" anchor="tools-submenu" label="Globosat" command="content/globosat/" type="MENU_ITEM" how="LAST_CHILD"/>-->
	</menu-items>
</plugin>
